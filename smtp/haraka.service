# From https://github.com/haraka/Haraka/blob/master/contrib/haraka.service

[Unit]
Description=Haraka MTA
After=syslog.target network.target remote-fs.target nss-lookup.target

[Service]
Type=simple
PIDFile=/var/run/haraka.pid

# CHANGE PATH TO INSTALLED HARAKA BINARY
ExecStart=/usr/bin/haraka -c /path/to/your/config

KillMode=process
PrivateTmp=true

[Install]
WantedBy=multi-user.target
